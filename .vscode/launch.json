    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Webserver",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}\\WebServer",
            "program": "${workspaceFolder}\\WebServer\\api.js"
        },
        {
            "type":"msedge",
            "request": "launch",
            "name": "Launch browser against dev server",
            "url": "http://localhost:5000",
            "webRoot": "${workspaceFolder}\\WebUI"
        }
    ]
}